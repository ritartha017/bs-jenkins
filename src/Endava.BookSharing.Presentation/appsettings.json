{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "TokenSettings": {
    "Issuer": "http://booksharing.local",
    "Audience": "http://booksharing.local",
    "Secret": "veryVerySuperSecretKey",
    "ExpirationInMinutes": 10
  },
  "PasswordResetTokenSettings": {
    "LifetimeInMinutes": 5
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Postgresql": "Username=postgres;Password=postgres;Server=db;Database=booksharing"
  },
  "FeatureToggleOptions": {
    "UseMagicBytesImageValidation": true
  },
  "BookCoverOptions": {
    "Url": "http://localhost:5027/book/cover?book_id={0}",
    "NoCoverUrl": "https://upload.wikimedia.org/wikipedia/commons/b/b9/No_Cover.jpg"
  },
  "CorsOptions": {
    "AccessControlAllowOrigin": "http://book-sharing.demo.think-it.work"
  }
}
